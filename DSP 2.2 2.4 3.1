%%                M3.1                 %%
clear all
R = [0.6, 0.9, 0.99];
theta = [0, pi, pi/4];
omega = 0:0.01:4*pi;

for p = 1:3
    
    
    d = (1-2.*R(p).*cos(theta(p))*exp(-1i.*omega)+(R(p).^(2))*exp(-1i*2.*omega));
    
    G = 1./d;

    
    Re = real(G);
    Im = imag(G);
    Magnitude = 20*log(abs(G));
    Phase = angle(G);
    figure(p+3);
    subplot(2,2,1);
    plot(omega, Re)
    title('Real')
    xlabel('Length')
    ylabel('Amplitude')
    subplot(2,2,2);
    plot(omega, Im)
    title('Imaginary')
    xlabel('Length')
    ylabel('Amplitude')
    subplot(2,2,3);
    
    plot(omega, Magnitude)
    title('Magnitude (db)')
    ylabel('db')
    xlabel('Length')
    subplot(2,2,4);
    plot(omega, Phase)
    title('Phase')
    ylabel('Phase')
    xlabel('Length')
end


